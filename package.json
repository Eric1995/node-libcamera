{
  "name": "node-libcamera",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "dist/lib/index.cjs",
  "module": "dist/es/index.mjs",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "node-gyp clean; rimraf ./dist",
    "build:ts": "tsx ./esbuild.config.ts",
    "build:playground": "tsx ./esbuild.config.ts --playground",
    "configure": "node-gyp configure",
    "configure:crosscompile": "FLAG=CROSS node-gyp configure",
    "build:napi": "CXX=clang++ node-gyp build --jobs=8;",
    "build:napi:crosscompile": "CXX=clang++ FLAG=CROSS node-gyp build --jobs=8;",
    "build": "npm run build:napi; npm run build:ts; npm run build:playground;",
    "build:crosscompile": "npm run build:napi:crosscompile && npm run build:ts && npm run build:playground;"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/index.mjs",
      "require": "./dist/lib/index.cjs"
    },
    "./addon": {
      "types": "./dist/types/addonLoader.d.ts",
      "import": "./dist/es/addonLoader.mjs",
      "require": "./dist/lib/addonLoader.cjs"
    }
  },
  "files": [
    "dist/build/**/*",
    "dist/es/**/*",
    "dist/lib/**/*",
    "binding.gyp"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.25.9",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "fs-extra": "^11.2.0",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.4.2",
    "prettier": "^3.1.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}